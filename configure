  cat << EOF > conftest.c
#include <sys/stat.h>
int main(void){struct stat s;s.st_mtim.tv_sec=0;return 0;}
EOF
  $cc $cflags $ldflags -o conftest conftest.c > /dev/null 2>&1
  if [ $? -eq 0 ] ; then
    rm -f conftest conftest.o conftest.c
    return 0
  else
    rm -f conftest conftest.o conftest.c
    return 1
  fi
}

