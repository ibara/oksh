  cat << EOF > conftest.c
#include <term.h>
#include <ncurses.h>
int main(void){setupterm(NULL, 0, NULL);return 0;}
EOF
  $cc $cflags $ldflags -o conftest conftest.c -lncurses > /dev/null 2>&1
